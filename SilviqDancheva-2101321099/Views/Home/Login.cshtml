@model SilviqDancheva_2101321099.ViewModels.Home.LoginVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login Page";

}
<hr />
<div class="text-center">
    <h1 class="display-4">Вход</h1>
</div>
<hr />
<html>
<body>
    <fieldset>
        <hr />
        <legend> Влез в своя профил</legend>
        <hr />
        <form action="/Home/Login" method="post">
            <div class="row">
                <div>@Html.LabelFor(m => m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Password)</div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div class="error">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                </div>
                <div class="error">
                    @Html.ValidationMessage("authError", new { @style = "right" })
                </div>
            </div>

            <div class="row">
                <div calss="col-2">
                    <input type="submit" class="right" value="Вход" />
                </div>
            </div>
            <div class="row">
            Нямате регистрация? <a href="/Users/Register">Регистрация</a>
            </div>
        </form>
    </fieldset>
    <hr/>
</body>
</html>